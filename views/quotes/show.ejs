<%- include('../partials/header') %>

<section id="show-page">
  <div>Title: </div>
  <div><%= quote.title %></div>
  <div>Release Year: </div>
  <div><%= quote.releaseYear %></div>
  <div>Rating: </div>
  <div><%= quote.mpaaRating %></div>
  <div>Now Showing: </div>
  <div><%= quote.nowShowing ? 'Yes' : 'Nope' %></div>
  <!-- start cast list -->
  <div>Cast:</div>
  <ul>
    <%- quote.cast.map(p => 
      `<li>${p.name} <small>${p.born.toLocaleDateString()}</small></li>`
    ).join('') %>
  </ul>
  <!-- end cast list -->
</section>
<!-- add to cast form below this comment -->
<form id="add-per-to-cast" action="/quotes/<%= quote._id %>/philosophers" method="POST">
  <select name="philosopherId">
    <!-- Emit an option for each performer -->
    <%- philosophers.map(p => 
      `<option value="${p._id}">${p.name}</option>`
    ).join('') %>
  </select>
  <button type="submit">Add to Quote</button>
</form>

<br><br><h2>Thoughts</h2>
<form id="add-thoughts-form" method="POST"
  action="/movies/<%= movie._id %>/reviews">
  <label>Thoughts</label>
  <textarea name="content"></textarea>
  <input type="submit" value="Add Thoughts">
</form>

<% if (quote.thoughts.length) { %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %>
      <% quote.thoughts.forEach(function(r) { %>
        <% total += r.rating %>
        <tr>
          <td class="thought-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer" ><%= r.userName %></td>
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td><%= r.content %></td>
          <td><%= r.rating %></td>
          <td>
            <% if (user?._id.equals(r.user)) { %>
              <form action="/thoughts/<%= r._id %>?_method=DELETE" method="POST">
                <button type="submit">X</button>
              </form>
            <% } %>
          </td>
        </tr>
      <% }); %>
      <tr>
        <td colspan="3"></td>
        <td><strong><%= (total / quote.thoughts.length).toFixed(1) %></strong></td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Thoughts Yet</h5>
<% } %>
  
<%- include('../partials/footer') %>
